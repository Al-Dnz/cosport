<%= form_tag events_index_path, :method => 'get', :id => 'events_search' do %>

    <p><%= label_tag 'City' %> </p>
    <p><%= text_field_tag :city, params[:search] %> </p>

    <p><%= label_tag 'Sport' %></p>
    <p><%= text_field_tag :sport, params[:search] %></p>
    <%= submit_tag "Search", :name => nil %>
<% end %>


<h2> tout les EVENTS :</h2>

<h3><a href="<%= events_path %>"> event index</a></h3>

<% @event.each do |event| %>
   	<div>
    	<a href="<%= event_path(event.id) %>"><%= event.title %></a>
   	</div>
<% end %>

