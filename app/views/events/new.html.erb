<div class="card bg-light" style="width: 30rem;"  >
<div class="card-body">

<h4><p>Créer un Cosport</p></h4>
<br>

<div class="container col-md-8 order-md-1" >
  <%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form ">
        <%= label_tag 'Description' %>
        <%= text_field_tag 'title', @title, class: "form-control" %>
  </div>

    <div class="form-group" >
          <%= label_tag 'Sport' %>
          <%=select_tag 'sport_id', options_for_select(Sport.all.collect{ |sport| [sport.sport_name, sport.id] }) %>
    </div>

    <div class="form-group" >
          <%= label_tag 'Ville' %>
          <%=select_tag 'city_id', options_for_select(City.all.collect{ |city| [city.city_name, city.id] }) %>
    </div>

     <div class="form-group" >
           <%= label_tag 'Durée(h)' %>
           <%= number_field_tag 'duration', @duration, class: "form-control " , min:0 ,step:5 %>
     </div>

     <div class="form-group" >
           <%= label_tag 'Date' %>
           <%= date_field_tag 'start_date', @start_date, class: "form-control "  %>
     </div>

     <div class="form-group" >
           <%= label_tag 'À partir de' %>
           <br>
            <%= time_field 'hour_start' , class: "form-control " %>
     </div>

     <div class="form ">
           <%= label_tag 'Description' %>
           <%= text_area_tag 'description', @description, class: "form-control" %>
     </div>
     <br>

     <div class="form-group ">
           <%= submit_tag "Creer", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>
     <% end %>
     </div>
  </div>
  </div>
