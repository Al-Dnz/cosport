


<%array = @events.map { |evt| evt.start_date.strftime("%F") } %>
<br>

<% array.sort.uniq.each do |date| %>
  <% if @events.where(start_date: date, validation: true).exists?%>
  <% event_date = @events.where(start_date: date, validation: true)[0].start_date  %>
  <%= @days_array_fr[event_date.wday]%>  <%= event_date.strftime("%e ")%>   <%=@months_array_fr[event_date.strftime("%m").to_i] %>   <%= event_date.strftime("%Y")%>
  <br>
  <% @events.where(start_date: date, validation: true).each do |event|%>
    <%= event.title%>
    <br>
  <% end %>
  <hr>
    <% end %>

<% end %>
