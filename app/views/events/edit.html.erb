<header class="masthead-2 mhead-1 text-center">

    <div class="container">
      <div class="row">


  <div class="col-md-5 col-lg-5 col-xl-5 mx-auto">

    <div class="col-xl-12 mx-auto font-1 text-center pb-3">
      <h1 class="f-regular font-3 strong-color"> Éditer le cosport</h1>
    </div>


  <%= form_for(@event, url: event_path(@event.id), html: { method: :patch }) do |f| %>

  <div class="col-12 mb-3">
        <%= f.text_field :title, autocomplete: "title", class: "form-control-light" %>
  </div>

    <div class="col-12 mb-3" >
          <%=select_tag :sport_id, options_for_select(Sport.all.collect{ |sport| [sport.sport_name, sport.id] },@event.sport_id ),  class: "form-control-light" %>
    </div>

    <div class="col-12 mb-3" >
          <%=select_tag :city_id, options_for_select(City.all.collect{ |city| [city.city_name, city.id] },@event.city_id), class: "form-control-light", :onchange => "centerCityMap()"  %>
    </div>



          <div class="col-12 mb-3 d-flex hidden-div">

            <div class="col-6 p-0 pr-1">
              <%= f.text_field :latitude , id:"lat-form", placeholder: "latitude", class: "form-control-light d-none  ", autocomplete: "latitude" %>
              </div>
                <div class="col-6 p-0 pl-1 ">
                  <%= f.text_field :longitude, id: "lgn-form", placeholder: "longitude", class: "form-control-light d-none ", autocomplete: "longitude" %>
                </div>
              </div>


              <div class="col-12 mb-3 row" >
                <div class="col-9">
                    <%= f.date_field :start_date, placeholder: "Date", class: "form-control-light ", autocomplete: "start_date"  %>
              </div>


              <div class="col-3 mb-3 pr-1 d-flex pt-2" >
                   <span class="time-spinner medium-color f-size-5 f-thin font-4">À partir de </span>
                    <%= time_field_tag 'hour_start', class: "form-control-light" %>
              </div>


              </div>

          <div class="col-12 mb-3" >
                <%= f.number_field :duration, class: "form-control-light ", placeholder: "durée" , min:0 ,step:5, autocomplete: "duration" %>
          </div>



     <div class="col-12 mb-3">
           <%= f.text_area :description, class: "form-control-light", placeholder: "description", autocomplete: "description" %>
     </div>

     <div class="col-12 mb-3">
           <%= submit_tag "Modifier", class: 'btn btn-block btn-lg btn-primary' %>
     </div>
     <% end %>
   </div>

   <div class="col-md-7 col-lg-7 col-xl-7 mx-auto">
     <div class="col-xl-12 mx-auto font-1 f-medium text-center pb-3">
       <h3 class="f-bold font-4 primary-color f-uppercase"> Pointe le lieu de Rdv sur la map ! </h3>
     </div>
      <div id="edit-event-map" class="col-12 mb-3 border-map"></div>
    </div>

  </div>
  </div>
  </header>

  <%= javascript_include_tag 'edit_event_map' %>
