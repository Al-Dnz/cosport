<div class="card bg-light" style="width: 30rem;"  >
<div class="card-body">

<h4><p>Editez votre Cosport</p></h4>
<br>

<div class="container col-md-8 order-md-1" >
  <%= form_for @event do |f| %>

  <div class="form ">
        <%= f.label 'Titre' %>
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>

    <div class="form-group" >
          <%= f.label 'Sport' %>
          <%= f.select :sport_id, options_for_select(Sport.all.collect{ |sport| [sport.sport_name, sport.id] }), autofocus: true, autocomplete: "sport_id" %>
    </div>

    <div class="form-group" >
          <%= f.label 'Ville' %>
          <%= f.select :city_id, options_for_select(City.all.collect{ |city| [city.city_name, city.id] }), autofocus: true, autocomplete: "city_id" %>
    </div>

    <div id="new-event-map">

    </div>

    <div id="hidden-div">
      <div class="form ">
            <%= f.label 'Latitude' %>
            <%= f.text_field :latitude, id:"lat-form", autofocus: true, autocomplete: "latitude" %>
      </div>
      <div class="form ">
            <%= f.label 'Longitude' %>
            <%= f.text_field :longitude, id: "lgn-form", autofocus: true, autocomplete: "longitude" %>
      </div>

    </div>

     <div class="form-group" >
           <%= f.label 'Durée(min)' %>
           <%= f.number_field :duration, class: "form-control " , min:0 ,step:5, autofocus: true, autocomplete: "duration" %>
     </div>

     <div class="form-group" >
           <%= f.label 'Date' %>
           <%= f.date_field :start_date, class: "form-control ", autofocus: true, autocomplete: "start_date"  %>
     </div>

     <div class="form-group" >
           <%= f.label 'À partir de' %>
           <br>
            <%= time_field_tag 'hour_start' , class: "form-control " %>
     </div>

     <div class="form ">
           <%= f.label 'Description' %>
           <%= f.text_area :description, class: "form-control", autofocus: true, autocomplete: "description" %>
     </div>
     <br>

     <div class="form-group ">
           <%= submit_tag "Éditer", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>
     <% end %>
     </div>
  </div>
  </div>

  <%= javascript_include_tag 'new_event_map' %>
