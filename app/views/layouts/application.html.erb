<!DOCTYPE html>
<html>
  <head>
    <title>Cosport</title>
    <%= include_gon %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name=viewport content="width=1024, initial-scale=1">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>



  </head>

  <body>
    <%= render "layouts/navbar_application"  %>
    <%= render 'layouts/flash' %>
    <% if current_user %>

      <div class="row offset-md-6 border border-danger col-6 fixed-bottom container">
        <div class="col-md-9">
          <ul id="conversations-list">
            <% @conversations.each do |conversation| %>
              <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
            <% end %>
          </ul>
        </div>
        <div class="col-md-3">
          <div class="panel panel-primary">
            <div class="panel-body collapse" id="tchat-user">
              <ul>
                <% @users.each do |user| %>
                  <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
                <% end %>
              </ul>
            </div>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#tchat-user" aria-expanded="false">user list</button>
          </div>
        </div>
      </div>

    <% end %>
    <div class="content">
      <%= yield %>

    </div>
    <%= render "layouts/footer_application"  %>

  </body>
</html>
